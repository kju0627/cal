<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent" android:layout_width="fill_parent" android:gravity="center_vertical|center_horizontal">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">
        <TextView android:text="@string/app_name" android:layout_width="wrap_content" android:textStyle="bold" android:layout_height="wrap_content" android:id="@+id/textView1" android:textSize="22dp"></TextView>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView2" android:text="Semantic Web Research Center, KAIST" android:textSize="14dp"></TextView>
        <TextView android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="14dp" android:text="(Integrated with K9-mail)"></TextView>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView3" android:text="Now loading data..." android:layout_margin="30dp" android:layout_gravity="center_horizontal"></TextView>
    </LinearLayout>
</RelativeLayout>
